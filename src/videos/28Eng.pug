                    while n < 8
                      - n = n+1
                      a.col-sm-4(href='../img/videos/28/tais-villian/'+n+'.jpg' data-toggle='lightbox' data-gallery='example-gallery')
                        img.img-fluid(src='../img/videos/28/tais-villian/'+n+'.jpg')
