include ../includes/head.pug
include ../includes/headerEng.pug
include ../includes/sliderEng.pug
include ../includes/footerEng.pug

doctype html
html(lang='ru')
  +head('../','Valentina Perfilyeva')
  link(rel="stylesheet", href="../css/ekko-lightbox.css")
  body
    +header("../")
    main
      +slider('../')
      .container.videos
        .row.mx-auto
          .col
            h3 Participants of competitions 2010 - 2011
            h4 VALENTINA PERFILYEVA
            img.mainImgSmall(src='../img/girls/valentina-perfileva/valentina.jpg' alt='main')
            p.
              <b>Valentina Perfilyeva</b> ( 5'8" / 132 lb ) - the participant of tournaments of "NAMAZON" club in SUBMISSION GRAPPLING,<br>
              the winner of the Olympic Games of martial arts "EAST-WEST" in karate (kumite).
            a.btn.btn-primary.screensBtn(data-toggle='collapse' href='#collapseExample' role='button' aria-expanded='false' aria-controls='collapseExample')
              | SUBMISSION GRAPPLING
            #collapseExample.collapse
              .col-md-12.text-center
                  .row.justify-content-center
                    - var n = 0;
                    while n < 8
                      - n = n+1
                      a.col-sm-4(href='../img/girls/valentina-perfileva/subgr/'+n+'.jpg' data-toggle='lightbox' data-gallery='example-gallery')
                        img.img-fluid(src='../img/girls/valentina-perfileva/subgr/'+n+'.jpg')
            <br>
            a.btn.btn-primary.screensBtn(data-toggle='collapse' href='#collapseExample2' role='button' aria-expanded='false' aria-controls='collapseExample2')
              | KICKBOXING
            #collapseExample2.collapse
              .col-md-12.text-center
                  .row.justify-content-center
                    - var n = 0;
                    while n < 4
                      - n = n+1
                      a.col-sm-4(href='../img/girls/valentina-perfileva/kick/'+n+'.jpg' data-toggle='lightbox' data-gallery='example-gallery')
                        img.img-fluid(src='../img/girls/valentina-perfileva/kick/'+n+'.jpg')
            <br>
            h4 <u>Results of fights</u>
            table.table.table-sm.table-bordered.table-responsive-sm.text-center.table-warning
              theat
                tr
                  th(scope="col") Valentina Perfilyeva vs Maria Rylyova
                  th(scope="col") Valentina Perfilyeva vs Natalia Mysik
                tr
                  td <a href="../videos/12Eng.html">VIDEO 12. Submission grappling. Tournament. April, 2010</a> 
                  td <a href="../videos/4Eng.html">VIDEO 4. "Christmas Cup 2011". Tournament on Submission Grappling"</a> 
                tr
                  td
                  td <a href="../videos/12Eng.html">VIDEO 12. Submission grappling. Tournament. April, 2010</a>
                
            table.table.table-sm.table-bordered.table-responsive-sm.text-center.table-warning
              theat
                tr
                  th(scope="col") Valentina Perfilyeva vs Ksenia Voloshina
                  th(scope="col") Valentina Perfilyeva vs. Nadezhda Akhmerova
                tr
                  td <a href="../videos/4Eng.html">VIDEO 4. "Christmas Cup 2011". Tournament on Submission Grappling"</a>
                  td <a href="../videos/13Eng.html">VIDEO 13. Kickboxing. Nadezhda Akhmerova vs Valentina Perfilyeva. 2011</a>
    +footer("../")